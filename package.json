{
	"name": "togglecase",
	"displayName": "ToggleCase",
	"description": "Toggle selected string between camelCase, snake_case and kebab-case.",
	"version": "0.0.1",
	"publisher": "wscourge",
	"author": {
		"name": "Wiktor Plaga",
		"email": "wscourge@gmail.com",
		"url": "https://www.linkedin.com/in/wiktor-plaga-7a353a106/"
	},
	"homepage": "https://github.com/wscourge/togglecase/blob/master/README.md",
	"license": "MIT",
	"icon": "images/logo-256x256.png",
	"galleryBanner": {
		"color": "#F9F9F9",
		"theme": "light"
	},
	"categories": [
		"Formatters"
	],
	"keywords": [
		"snake_case",
		"camelCase",
		"kebab-case",
		"toggle"
	],
	"repository": {
    "type": "git",
    "url": "https://github.com/wscourge/togglecase.git"
	},
	"bugs": {
    "url": "https://github.com/wscourge/togglecase/issues"
	},
	"engines": {
		"vscode": "^1.46.0"
	},
	"activationEvents": [
		"onCommand:editor.togglecase"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Toggle Case Configuration",
			"properties": {
				"togglecase.pattern": {
					"type": "string",
					"default": "[0-9]|[a-z]|[A-Z]|_|-",
					"description": "Regex that matches characters occuring in variables' names."
				}
			}
		},
		"commands": [
			{
				"command": "editor.togglecase",
				"title": "Toggle Case"
			}
		],
		"keybindings": [
			{
				"command": "editor.togglecase",
				"key": "ctrl+;",
				"mac": "cmd+;"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"@types/vscode": "^1.46.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"@typescript-eslint/parser": "^2.30.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"@types/lodash.camelcase": "^4.3.6",
		"@types/lodash.kebabcase": "^4.1.6",
		"@types/lodash.snakecase": "^4.1.6",
		"lodash.camelcase": "^4.3.0",
		"lodash.kebabcase": "^4.1.1",
		"lodash.snakecase": "^4.1.1"
	}
}
